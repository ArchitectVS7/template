# API Configuration
VITE_API_URL="http://localhost:3000"

# Application Configuration
VITE_APP_NAME="Web App Template"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="A production-ready web application template"

# Authentication Configuration
VITE_JWT_STORAGE_KEY="webappauth"
VITE_SESSION_TIMEOUT_MINUTES=1440  # 24 hours

# Feature Flags
VITE_ENABLE_LLM_CHAT=true
VITE_ENABLE_DEBUG_TERMINAL=true
VITE_ENABLE_USER_REGISTRATION=true
VITE_ENABLE_EMAIL_VERIFICATION=false

# UI Configuration
VITE_DEFAULT_THEME="light"
VITE_DEFAULT_LANGUAGE="en"
VITE_ENABLE_THEME_TOGGLE=true

# Analytics & Monitoring (Optional)
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880  # 5MB in bytes
VITE_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Development Configuration
VITE_ENABLE_DEV_TOOLS=true
VITE_SHOW_PERFORMANCE_METRICS=false