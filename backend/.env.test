# Test environment configuration
NODE_ENV=test

# Database Configuration - using SQLite for tests
DATABASE_URL="file:./prisma/test.db"

# JWT Configuration
JWT_SECRET="test-jwt-secret-key-for-testing-only"
JWT_REFRESH_SECRET="test-jwt-refresh-secret-key-for-testing-only"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration - Use different port to avoid conflicts
PORT=3002

# Debug Configuration - Reduce verbosity during tests
DEBUG_LEVEL="error"
ENABLE_REQUEST_LOGGING=false

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Frontend URL (for CORS) - Test environment
FRONTEND_URL="http://localhost:5173"

# Anthropic AI Configuration (mock key for testing)
ANTHROPIC_API_KEY="sk-test-key-for-testing"
